<div class="container mt-5">
  <div class="row">
    <div class="col-6 mx-auto">
      <h2>拾ったゴミを投稿</h2>
        <%= form_for @pick_up do |f| %>
          <div class="form-group">
            <%= f.label :"拾ったゴミ" %>
            <%= f.text_field :title, class: "form-control" %>
          </div>
          
          <div class="form-group">
            <%= f.label :"都道府県" %>
            <%= f.text_field :prefecture, class: "form-control" %>
          </div>
          
          <div class="form-group">
            <%= f.label :"市区町村" %>
            <%= f.text_field :city, class: "form-control" %>
          </div>
          
          <div class="form-group">
            <%= f.label :"詳細" %>
            <%= f.text_area :pick_up_profile, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :pick_up_image, "写真", class: "label" %>
            <%= f.attachment_field :pick_up_image, class: "input" %>
          </div>
          
          <div>
            <%= f.submit "投稿", class: "btn btn-primary" %>
          </div>
        <% end %>
    </div>
  </div>
</div>