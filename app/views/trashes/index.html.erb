<div class="col-12 mx-auto mt-5">
  <div class="container">
  <h3>見つけたゴミ一覧</h3>
    <div class="row mt-3">
      <% @trashes.each do |trash| %>
        <div class="col-4 mx-auto">
          <div class="card mb-5">
            <div class="card-body">
              <%= link_to trash_path(trash) do %>
                <%= attachment_image_tag trash, :trash_image, :fill, 300, 300, fallback: "no_image.jpg", size:'320x300',  class: "image"  %>
              <% end %>
            </div>
            <div class="card-body">
              <h5 class="card-title"><%= trash.title %></h5>
              <% if trash.trash_profile? %>
                <p><%= trash.trash_profile %></p>
              <% else %>
                <p>コメントなし。</p>
              <% end %>
              <p><%= attachment_image_tag trash.user, :image, fallback: "no_image.jpg", size:'50x50',  class: "image"  %><%= link_to trash.user.name, user_path(trash.user) %></p>
              <p class="card-subtitle mb-2 text-muted"><%= trash.prefecture %>, <%= trash.city %></p>
              <p><%= trash.updated_at.strftime("%Y年%m月%d日 %H時%M分") %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
