<div class="container mt-5">
  <div class="row">
    <div class="col-6 mx-auto">
      <h2>新規登録</h2>
      
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
      
        <div class="form-group">
          <%= f.label :"名前" %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
        </div>
      
        <div class="form-group">
          <%= f.label :"都道府県" %><br />
          <%= f.text_field :prefecture, autofocus: true, autocomplete: "prefecture", class: "form-control" %>
        </div>
      
        <div class="form-group">
          <%= f.label :"市区町村" %><br />
          <%= f.text_field :city, autofocus: true, autocomplete: "city", class: "form-control" %>
        </div>
      
        <div class="form-group">
          <%= f.label :"自己紹介" %><br />
          <%= f.text_area :profile, autofocus: true, autocomplete: "profile", class: "form-control" %>
        </div>
      
        <div class="form-group">
          <%= f.label :"メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
      
        <div class="form-group">
          <%= f.label :"パスワード" %>
          <% if @minimum_password_length %>
          <em><small>(英数字<%= @minimum_password_length %> 文字以上)</small></em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "password", class: "form-control" %>
        </div>
      
        <div class="form-group">
          <%= f.label :"パスワード確認" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "password_confirmation", class: "form-control" %>
        </div>
      
        <div>
          <%= f.submit "新規登録", class: "btn btn-primary" %>
        </div>
      <% end %>
      
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>



